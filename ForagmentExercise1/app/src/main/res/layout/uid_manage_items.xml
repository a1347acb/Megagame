<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/uidManageItemsHeight"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center">
    <TextView
        android:id="@+id/number"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/uidManageItemsTextSize"
        tools:text="1"/>
    <ImageView
        android:id="@+id/carLogoImage"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        tools:src="@drawable/car1"/>
    <!--车牌信息、车主信息-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/plateNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/uidManageItemsTextSize"
            tools:text="辽A1001"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="@dimen/uidManageItemsTextSize"
                android:text="车主:"/>
            <TextView
                android:id="@+id/owner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/uidManageItemsTextSize"
                tools:text="张三"/>
        </LinearLayout>
    </LinearLayout>
    <!--余额信息-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="@dimen/uidManageItemsTextSize"
            android:text="余额："/>
        <TextView
            android:id="@+id/balance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="@dimen/uidManageItemsTextSize"
            tools:text="200"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="center">
        <CheckBox
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/recharge"
            android:layout_width="@dimen/uidManageItemsButtonWidth"
            android:layout_height="match_parent"
            android:textSize="@dimen/uidManageItemsTextSize"
            android:padding="@dimen/uidManageItemsButtonPadding"
            android:text="充  值"/>
    </LinearLayout>
</LinearLayout>