<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dicon"
        android:layout_marginLeft="@dimen/transportationPresentMargin"
        android:layout_marginRight="@dimen/transportationPresentMargin"/>
    <TextView
        android:id="@+id/platFormName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/transportationPresentTextSize"
        tools:text="中医院站"/>
</LinearLayout>